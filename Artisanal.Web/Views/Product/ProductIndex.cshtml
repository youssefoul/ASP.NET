@model IEnumerable<Artisanal.Web.Models.ProductDto>

    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1 class="texte-primary">Products List</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="ProductCreate" class="btn-outline-primary">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th> Name </th>
                    <th> Category </th>
                    <th> Price </th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {<tr>
                    <td> @item.ProductName </td>
                    <td> @item.CategoryName </td>
                    <td> @item.Price </td>
                    <td> 
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                  
                         <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td> 
                </tr>
                }
            </tbody>
        </table>
    </div>
